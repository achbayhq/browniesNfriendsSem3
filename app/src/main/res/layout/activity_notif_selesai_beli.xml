<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaksi.notifSelesaiBeliActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/gif_centang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Pemesanan Berhasil!"
        android:textSize="27dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/brownLogo"
        app:layout_constraintEnd_toEndOf="@+id/gifImageView"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/gifImageView"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

    <TextView
        android:id="@+id/statusTr"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:gravity="end"
        android:text="Lunas"
        android:textColor="#660A00"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView26"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="@+id/textView26"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <TextView
        android:id="@+id/txtTanggalNow"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="-40dp"
        android:text="32 Februari 2023 "
        android:textColor="#928383"
        android:fontFamily="@font/poppins"
        android:textSize="16dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/txtGrandTotalNotif"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/statusTr"
        app:layout_constraintTop_toBottomOf="@+id/statusTr" />

    <TextView
        android:id="@+id/txtGrandTotalNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="500.000"
        android:fontFamily="@font/poppins_extrabold"
        android:textColor="#660A00"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/statusTr"
        app:layout_constraintStart_toEndOf="@+id/statusTr"
        app:layout_constraintTop_toTopOf="@+id/statusTr" />

    <TextView
        android:id="@+id/txtJamNow"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="01.23 "
        android:textColor="#928383"
        android:fontFamily="@font/poppins"
        android:textSize="17dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/txtTanggalNow"
        app:layout_constraintStart_toEndOf="@+id/txtTanggalNow"
        app:layout_constraintTop_toTopOf="@+id/txtTanggalNow"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIB "
        android:textColor="#928383"
        android:fontFamily="@font/poppins"
        android:textSize="17dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/txtJamNow"
        app:layout_constraintStart_toEndOf="@+id/txtJamNow"
        app:layout_constraintTop_toTopOf="@+id/txtJamNow" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Menunggu Konfirmasi"
        android:textColor="#63372C"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView37"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="@+id/txtTanggalNow"
        app:layout_constraintTop_toBottomOf="@+id/txtTanggalNow" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView38"
        app:layout_constraintEnd_toStartOf="@+id/textView38"
        app:layout_constraintTop_toTopOf="@+id/textView38"
        app:srcCompat="@drawable/logo_menunggu" />

    <Button
        android:id="@+id/button6"
        android:layout_width="185dp"
        android:layout_height="53dp"
        android:layout_marginTop="44dp"
        android:text="Lihat Nota"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:backgroundTint="@color/brownButton"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <Button
        android:id="@+id/button8"
        android:layout_width="185dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/brownButton"
        android:fontFamily="@font/poppins"
        android:text="List Pesanan"
        android:textSize="18dp"
        android:textStyle="bold"
        android:onClick="keListPesanan"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button6" />
</androidx.constraintlayout.widget.ConstraintLayout>