<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaksi.pelunasanActivity">
    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/brownLogo"
        android:text="Simpan"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/txtNominalBayar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtNominalBayar"
        app:layout_constraintTop_toBottomOf="@+id/txtNominalBayar" />

    <Button
        android:id="@+id/btnUpload2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/brownLogo"
        android:fontFamily="@font/poppins"
        android:text="Bukti Pembayaran"
        android:textSize="14dp"
        android:visibility="visible"
        app:icon="@drawable/logo_upload"
        app:iconGravity="textEnd"
        app:iconPadding="2dp"
        app:iconSize="25dp"
        app:iconTint="@color/basePutih"
        app:layout_constraintEnd_toEndOf="@+id/txtNominalBayar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtNominalBayar"
        app:layout_constraintTop_toBottomOf="@+id/txtNominalBayar" />

    <Button
        android:id="@+id/button9"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/transparan"
        app:icon="@drawable/logo_kembali"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="25dp"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pelunasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_medium"
        android:text="PELUNASAN"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnTransfer"
        android:layout_width="160dp"
        android:layout_height="115dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pelunasan"
        app:srcCompat="@drawable/btn_transfer" />

    <ImageView
        android:id="@+id/btnTunai"
        android:layout_width="187dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnTransfer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toEndOf="@+id/btnTransfer"
        app:layout_constraintTop_toTopOf="@+id/btnTransfer"
        app:srcCompat="@drawable/logo_cash" />

    <TextView
        android:id="@+id/pembayaran_tf"
        android:layout_width="326dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal|top"
        android:text="@string/Pelunasan_tf"
        android:textAppearance="@style/pembayaran_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTransfer" />

    <TextView
        android:visibility="gone"
        android:id="@+id/pembayaran_tunai"
        android:layout_width="326dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal|top"
        android:text="@string/pembayaran_tunai"
        android:textAppearance="@style/pembayaran_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTransfer" />

    <View
        android:id="@+id/view13"
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="279dp"
        android:background="@color/brownLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
