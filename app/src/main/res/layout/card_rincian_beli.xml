<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="105dp"
        android:background="@drawable/lingkaran_putih"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgMenu"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/menu_a" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/namaMenu"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Nama Kuenya"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/cardView9"
            app:layout_constraintHorizontal_bias="0.039"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Rp "
            android:textColor="@color/brownLogo"
            android:textSize="15sp"
            android:textStyle="bold"
            android:shadowColor="#2C000000"
            android:shadowDx="3"
            android:shadowDy="7"
            android:shadowRadius="6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/brownLogo"
            android:fontFamily="@font/poppins_semibold"
            android:shadowColor="#2C000000"
            android:shadowDx="3"
            android:shadowDy="7"
            android:shadowRadius="6"
            app:layout_constraintBottom_toBottomOf="@+id/rp"
            app:layout_constraintStart_toEndOf="@+id/rp"
            app:layout_constraintTop_toTopOf="@+id/rp" />

        <Button
            android:id="@+id/btnKurang"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:layout_marginStart="7dp"
            android:backgroundTint="@color/transparan"
            app:icon="@drawable/logo_kurang"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:iconTint="@color/brownLogo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView9"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnTambah"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/transparan"
            app:icon="@drawable/logo_tambah"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:iconTint="@color/brownLogo"
            app:layout_constraintBottom_toBottomOf="@+id/txtQty"
            app:layout_constraintStart_toEndOf="@+id/txtQty"
            app:layout_constraintTop_toTopOf="@+id/txtQty" />

        <EditText
            android:id="@+id/txtQty"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:ems="10"
            android:text="100"
            android:textSize="12sp"
            android:textAlignment="center"
            android:inputType="text"
            android:background="@color/transparan"
            app:layout_constraintBottom_toBottomOf="@+id/btnKurang"
            app:layout_constraintStart_toEndOf="@+id/btnKurang"
            app:layout_constraintTop_toTopOf="@+id/btnKurang" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>