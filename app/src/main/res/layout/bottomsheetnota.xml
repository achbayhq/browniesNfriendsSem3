<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sheet_bg">


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Pembatalan akan segera diajukan"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Mengapa pesanan ini dibatalkan?"
        android:textColor="#978B8A"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/alasanBatal1"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Perubahan menu kue yang dipesan"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <View
        android:id="@+id/view1"
        android:layout_width="375dp"
        android:layout_height="2dp"
        android:background="@color/brownLogo"
        app:layout_constraintEnd_toEndOf="@+id/alasanBatal1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/alasanBatal1"
        app:layout_constraintTop_toBottomOf="@+id/alasanBatal1" />

    <TextView
        android:id="@+id/alasanBatal2"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Perubahan tanggal rencana pengambilan"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <View
        android:id="@+id/view2"
        android:layout_width="375dp"
        android:layout_height="2dp"
        android:background="@color/brownLogo"
        app:layout_constraintEnd_toEndOf="@+id/alasanBatal2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/alasanBatal2"
        app:layout_constraintTop_toBottomOf="@+id/alasanBatal2" />

    <TextView
        android:id="@+id/alasanBatal3"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Kesalahan dalam pesanan"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <View
        android:id="@+id/view3"
        android:layout_width="375dp"
        android:layout_height="2dp"
        android:background="@color/brownLogo"
        app:layout_constraintEnd_toEndOf="@+id/alasanBatal3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/alasanBatal3"
        app:layout_constraintTop_toBottomOf="@+id/alasanBatal3" />

    <TextView
        android:id="@+id/alasanBatal4"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Keterbatasan keuangan"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <View
        android:id="@+id/view4"
        android:layout_width="375dp"
        android:layout_height="2dp"
        android:background="@color/brownLogo"
        app:layout_constraintEnd_toEndOf="@+id/alasanBatal4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/alasanBatal4"
        app:layout_constraintTop_toBottomOf="@+id/alasanBatal4" />

    <EditText
        android:id="@+id/alasanLainnya"
        android:layout_width="375dp"
        android:layout_height="65dp"
        android:paddingStart="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Ketikkan Alasan Lainnya"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16dp"
        android:backgroundTint="@color/brownLogo"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <Button
        android:id="@+id/btnKirimPembatalan"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/brownButton"
        android:text="KIRIM"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alasanLainnya" />
</androidx.constraintlayout.widget.ConstraintLayout>